{% extends 'base.html.twig' %}

{% block title %}Курсы{% endblock %}

{% block body %}
    <h1 class="fw-bolder">Курсы</h1>

    <div class="container">
        <div class="row gx-5">
            {% for course in courses %}
                <div class="col-md-6">
                    <div class="card p-2 m-2">
                        <div class="card-body">
                            <h4>{{ course.name }}</h4>
                            <p>{{ course.description }}</p>
                            <a class="btn btn-primary" href="{{ path('app_course_show', {'id': course.id}) }}">Пройти</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div>
                    <p>Курсы отсутствуют</p>
                </div>
            {% endfor %}
        </div>
    </div>
    <hr>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-outline-primary" href="{{ path('app_course_new') }}">Создать новый курс</a>
    {% endif %}
{% endblock %}
